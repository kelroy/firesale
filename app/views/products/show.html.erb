<div class="container">
	<div class="top">
	</div>
	<div class="center">
		<span class="lbl show">
			<p id="notice"><%= notice %></p>

			<p>
			  <b>Title:</b>
			  <%= @product.title %>
			</p>

			<p>
			  <b>Description:</b>
			  <%= @product.description %>
			</p>

			<p>
			  <b>Image url:</b>
			  <%= @product.image_url %>
			</p>

			<p>
			  <b>Price:</b>
			  $<%= @product.price %>
			</p>

			<p>
			  <b>Created at:</b>
			  <%= @product.created_at %>
			</p>

			<p>
			  <b>Updated at:</b>
			  <%= @product.updated_at %>
			</p>


			<%= link_to 'Edit', edit_product_path(@product) %> |
			<%= link_to 'Back', products_path %>
		</span>
	</div>
	<div class="bottom">
	</div>
</div>